/* components/fullscreen/fullscreen.wxss */

/* 
 * fullscreen
 */
.fullscreen{
  width:100%;
  height:100vh;
  position: fixed;
  bottom:0;
  right:0;
  z-index: 9999;
}
.fullscreen .countDown{
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.4);
  text-align: center;
  border-radius: 8rpx;
  position: absolute;
  top:30rpx;
  right: 35rpx;
}
.fullscreen image{
  display: block;
  width:100%;
  height:100vh;
}
.fullscreen .adText{
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.4);
  font-size: 18rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  right: 0;
}
