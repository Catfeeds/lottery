/* pages/login/login.wxss */
/*授权登录  */
.login{
  position: relative;
  display: flex;
  justify-content:center;
  z-index: 999;
}
.login image{
  display: block;
  width:100%;
  height:100vh; 
}
.login{
  display: flex;
  justify-content: center;
}
.login .logo {
  position: absolute;
  top:80rpx;
  color: #ffeba0;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 5rpx;
}
.login .logo image{
  width: 148rpx;
  height: 148rpx;
  margin:0 auto 20rpx;
  
}
.login .start{
  width: 180rpx;
  height: 181rpx;
  position: absolute;
  bottom:120rpx;
  left: calc(50% - 90rpx);
  animation: run 1s linear infinite;
}
@keyframes run{
  0%{
    transform: scale(1)
  }
  50%{
    transform: scale(1.16)
  }
  100%{
    transform: scale(1)
  }
}

.login button{
  width:100%;
  height: 100vh;
  line-height:70rpx;
  position: absolute;
  top:0;
  left: 0;
  bottom:0;
  color:#fff;
  background-color:rgba(255,255,255,0);
  z-index: 999;
  /* border:1px solid #fff; */
}
button:after{
  border: none;
}