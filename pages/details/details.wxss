/* pages/details/details.wxss */

.content {
  background: #f4f4f4;
}

/* 头部 */

.header {
  padding: 0 24rpx;
}

.head {
  background: #fff;
  border-radius: 20rpx;
}

.headPic {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx 20rpx 0 0;
  display: block;
}

.headFre {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.freText {
  font-size: 32rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: #666;
}

.freTime {
  margin-bottom: 18rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: #999;
}

/* 抽奖动态 */

.lottery {
  margin-top: 20rpx;
  padding: 26rpx 0 22rpx 0;
  background: #fff;
  border-radius: 20rpx;
}

.lottText {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
}

.lottText image {
  margin-top: 4rpx;
  margin-right: 10rpx;
  width: 8rpx;
  height: 32rpx;
}

.lottText text {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #be8c54;
}

.dynam image {
  margin-top: 54rpx;
  margin-left: 260rpx;
  width: 180rpx;
  height: 180rpx;
}

.dynamText {
  margin-top: 30rpx;
  display: block;
  text-align: center;
  font-family: MicrosoftYaHei;
  color: #999;
  font-size: 24rpx;
}

.probability {
  color: #e44348;
}

.dyFind {
  display: block;
  margin-top: 8rpx;
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  text-align: center;
  color: #be8c54;
  text-decoration: underline;
}

/* 赞助商介绍 */

.sponsor {
  margin-top: 20rpx;
  background: #fff;
  padding: 26rpx 0 24rpx 0;
  border-radius: 20rpx;
}

.spon {
  display: flex;
}

.spon image {
  margin-top: 4rpx;
  margin-right: 10rpx;
  width: 8rpx;
  height: 32rpx;
}

.spon text {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #be8c54;
}

.introduce {
  padding: 6rpx 20rpx;
}

.intText {
  padding-right: 10rpx;
  /* line-height: 30rpx; */
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
}

.intTexts {
  line-height: 30rpx;
}

.introd {
  display: flex;
  justify-content: space-between;
  padding: 0 34rpx 0 24rpx;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 74rpx;
  border-radius: 50rpx;
  background: linear-gradient(172deg, rgba(252, 249, 209, 1) 0%, rgba(239, 212, 157, 1) 100%);
}

.introd image {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
  animation: turn 2.6s infinite ease;
}

@keyframes turn {
  0% {
    transform: rotateY(0);
  }

  100% {
    transform: rotateY(360deg);
  }
}

.introd text {
  font-size: 28rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: #be8c54;
}

/* 商品详情 */

.shopDetails {
  margin-top: 20rpx;
  padding: 26rpx 0;
  background: #fff;
  border-radius: 20rpx;
}

.detailText image {
  width: 190rpx;
  height: 40rpx;
  display: block;
}

.details {
  padding: 18rpx 24rpx 0 24rpx;
}

/* 关注我们 */

.about {
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  padding: 26rpx 0;
  background: #fff;
  border-radius: 20rpx;
}

.aboutsUs {
  display: flex;
}

.aboutsUs image {
  margin-top: 4rpx;
  margin-right: 10rpx;
  width: 8rpx;
  height: 32rpx;
}

.aboutsUs text {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #be8c54;
}
.aboutText{
line-height: 30rpx; 
}
.aboutText text {
  padding: 10rpx 30rpx 0 20rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color: #666;
  display: block;
}
.aboutBut{
  display: flex;
  padding: 24rpx 20rpx 0 20rpx;
}
.aboutBut text{
  display: block;
  width: 440rpx;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: #be8c54;
  text-align: center;
  line-height: 70rpx;
}
.aboutBut image{
  margin-left: 20rpx;
  width: 200rpx;
  height: 70rpx;
}

/* 尾部悬浮 */
.footer{
  position: fixed;
  display: flex;
  justify-content: space-between;
  left: 0;
  right: 0;
  bottom:0;
  height: 88rpx; 
  
}
.home{
  margin: 0;
  padding: 0;
  border-radius: 0;
  width: 250rpx;
  color: #666;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  line-height: 88rpx;
}
.share{
  margin: 0;
  padding: 0;
  border-radius: 0;
  width: 500rpx;
  height: 88rpx;
  background: #EC5B5A;
  color: #fff;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  line-height: 88rpx;
}